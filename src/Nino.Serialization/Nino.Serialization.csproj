<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks Condition="'$(LibraryFrameworks)'==''">net461;net6.0;net7.0;netcoreapp3.1;netstandard2.0</TargetFrameworks>
        <TargetFrameworks Condition="'$(LibraryFrameworks)'!=''">$(LibraryFrameworks)</TargetFrameworks>
        <LangVersion>7.3</LangVersion>
        <Nullable>disable</Nullable>
        <ImplicitUsings>disable</ImplicitUsings>
        <PackageId>Nino.Serialization</PackageId>
        <Authors>JasonXuDeveloper</Authors>
        <Title>Nino.Serialization</Title>
        <PackageTags>Nino;Serialization;Binary</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>High performance and low size binary serialization solution, especially for Unity.</Description>
        <Copyright>JasonXuDeveloper</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/JasonXuDeveloper/Nino</RepositoryUrl>
        <PackageProjectUrl>https://github.com/JasonXuDeveloper/Nino</PackageProjectUrl>
        <NeutralLanguage>en-001</NeutralLanguage>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PackageVersion>1.2.0</PackageVersion>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <PackageReleaseNotes>Nino.Serialization v1.2
- [optimization] optimized serializer/deserializer/writer/reader
- [fix] fixed issues i.e. crashes on 32 bits machines
- [feat] support to serialize with stackalloc
- [IMPORTANT] this version is not compatible with past versions</PackageReleaseNotes>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Nino.Shared\Nino.Shared.csproj" />
    </ItemGroup>

</Project>
